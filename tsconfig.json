{
  "include": [
    "src",
    "src/**/*.json",
    "ambient.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "test",
    "jest.config.js"
  ],
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "rootDirs": [
      "src",
      "test"
    ],
    "lib": [
      "es2022"
    ],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "test/*": [
        "test/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  }
}
